{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ESNext",
    "module": "commonjs",
    "sourceMap": true,
    "noImplicitAny": true,
    "allowJs": true,
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "strict": true,
  },
  "include": [
    "src"
  ]
}