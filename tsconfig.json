{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "ESNext",
    "sourceMap": true,
    "noImplicitAny": true,
    "allowJs": true,
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "allowSyntheticDefaultImports" : true,
    "esModuleInterop" : true,
    "typeRoots": ["node_modules/@types", "src/@types"],
    "resolveJsonModule": true
  },

}